        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <div class="container-fluid">
                        <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Data Buku</h6>
                        </div>
                        <div class="card-body">
                            <form action="/tambah/anggota/1" method="post" enctype="multipart/form-data">   
                                <div class="form-group">
                                  <label class="col-md-2 control-label">Nama</label>
                                  <div class="col-md-10">
                                    <input class="form-control" required type="text" placeholder="Nama" name="nama" id="">
                                  </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">NOSIS</label>
                                    <div class="col-md-10">
                                      <input class="form-control" required type="number" placeholder="Nosis" name="nosis" placeholder="nosis" id="">
                                    </div>
                                </div>

                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label class="control-label">Jenis Kelamin</label>
                                    <select class="form-control col-md-10" id="kelamin" name="kelamin">
