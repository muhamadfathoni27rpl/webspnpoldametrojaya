                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Tanggal Lahir</label>
                                    <div class="col-md-10">
                                      <input class="form-control" required type="date" placeholder="T" name="tgl_lahir" id="">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Asal Polda</label>
                                    <div class="col-md-10">
                                      <input class="form-control" required placeholder="Ex: POLDA METRO JAYA " type="text"  name="asal_polda" id="">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Nomor HP</label>
                                    <div class="col-md-10">
                                      <input class="form-control" required type="number" name="hp" id="">
                                    </div>
                                </div>

