<!DOCTYPE html>
<html lang="en">
<%- include('include/head'); %>
<body id="page-top">
    <%- include('../include/alert'); %>
    <div id="wrapper">
        <%- include('include/slidebar'); %>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <%- include('include/navbar'); %>
                <div class="container-fluid">
                        <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h3 class="m-0 font-weight-bold text-primary">Data Anggota</h3>
                            <a href="/admin/a/anggota/1">Tambahkan Anggota</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="agt_" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Nama</th>
                                            <th>Jenis Kelamin</th>
                                            <th>Tempat , Tanggal Lahir</th>
                                            <th>Asal Polda</th>
                                            <th>Nomor HP</th>
                                            <th>Alamat</th>
                                            <th>Setting</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let i = 0; i < dataSiswa.length; i++) { %>
                                            <% const x = dataSiswa[i]; %>
                                            <tr>
                                                <td><%= x.nama %></td>
                                                <td><%= x.jenis_kelamin %></td>
                                                <td><%= x.tmp_lhr %> <%= x.tgl_lhr %></td>
                                                <td><%= x.asal_polda %></td>
                                                <td><%= x.no_hp %></td>
                                                <td><%= x.alamat %></td>
                                                <td>
                                                    <button type="button" onclick="location.href = '/admin/e/anggota/<%= x.id %>'"   class="btn btn-outline-warning"><i class="fas fa-edit"></i></button>
                                                    <button type="button" onclick="konfir('<%= x.id %>');" class="btn btn-outline-danger"><i class="fa fa-trash"></i></button>
                                                </td>
                                              </tr> 
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <script>
        $(document).ready(function() {
            $('#agt_').DataTable();
        } );
        function konfir(id){
            swal({
                title: "Apakah Kamu Yakin ?",
                text: "Data Akan Dihapus Secara Permanen dari sistem kami",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((gas) => {
                if (gas) {
                    swal("Data Terhapus", {
                        icon: "success",
                    });
                    location.href = '/admin/d/anggota/'+id
                } else {
                    swal("Dibatalkan");
                }
            });
        }
    </script>
    <%- include('include/close'); %>

</body>

</html>