<!DOCTYPE html>
<html lang="en">
<%- include('include/head'); %>

<body id="page-top">
    <div id="wrapper">
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <div class="container-fluid">
                        <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Data Buku</h6>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal row-border" action="/e/kurikulum/<%=dataKur.id%>" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                  <label class="col-md-2 control-label">Judul</label>
                                  <div class="col-md-10">
                                    <input class="form-control" type="text" value="<%=dataKur.judul %>" name="judul" id="" required>
                                  </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <label class="control-label">Jenis</label>
                                    <select class="form-control col-md-10" id="j" name="jenis">
                                        <% if(dataKur.jenis == 'DIKTUK'){ %>
                                            <option value="">--- Silahkan Pilih ---</option>
                                            <option selected value="1">DIKTUK</option>
                                            <option value="2">DIKBANG</option>
                                            <option value="3">PELATIHAN</option>
                                        <% }else if(dataKur.jenis == 'DIKBANG'){ %>
                                            <option value="">--- Silahkan Pilih ---</option>
                                            <option value="1">DIKTUK</option>
                                            <option selected value="2">DIKBANG</option>
                                            <option value="3">PELATIHAN</option>
                                        <% }else if(dataKur.jenis == 'PELATIHAN'){ %>
                                            <option value="">--- Silahkan Pilih ---</option>
                                            <option value="1">DIKTUK</option>
                                            <option value="2">DIKBANG</option>
                                            <option selected value="3">PELATIHAN</option>
                                        <% }else{ %>
                                            <option value="">--- Silahkan Pilih ---</option>
                                            <option value="1">DIKTUK</option>
                                            <option value="2">DIKBANG</option>
                                            <option value="3">PELATIHAN</option>
                                        <% } %>
                                    </select>
                                </div>

                                  <div class="d-grid gap-2 col-6 mx-auto">
                                    <input class="btn btn-outline-primary" type="submit" value="Edit">
                                  </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>

    <%- include('include/close'); %>

</body>

</html>

